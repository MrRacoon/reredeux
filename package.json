{
  "name": "reredeux",
  "version": "0.1.0",
  "description": "Build nested state structures with ease",
  "main": "index.js",
  "scripts": {
    "build:src": "babel --out-dir=dist --sorce-root=src src",
    "build:example": "babel --out-dir=example-dist --sorce-root=example example",
    "build": "run-s build:*",
    "example": "node -i ./example-dist/index.js",

    "lint:src": "eslint ./src/**/*.js",
    "lint:test": "eslint ./test/**/*.js",
    "lint": "run-s list:*",

    "test:examples": "mocha example/test.js",
    "test:api": "mocha test/api.js",
    "test": "run-s lint:* build:* test:*"
  },
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com/MrRacoon/reredeux.git"
  },
  "author": "Erik Sutherland <erik.misu@gmail.com>",
  "license": "MIT",
  "babel": {
    "presets": [
      [
        "es2015"
      ]
    ],
    "plugins": [
      "transform-object-rest-spread"
    ],
    "comments": false
  },
  "devDependencies": {
    "babel-core": "^6.22.1",
    "babel-plugin-transform-object-rest-spread": "^6.22.0",
    "babel-preset-es2015": "^6.22.0",
    "eslint": "^3.15.0",
    "mocha": "^3.2.0",
    "npm-run-all": "^4.0.1",
    "redux": "^3.6.0",
    "should": "^11.2.0"
  },
  "dependencies": {
    "ramda": "^0.23.0"
  }
}
